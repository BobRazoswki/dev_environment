<header class="wow fadeInDown header home">
  <h1 class="header__h1">
    Dev Environment Setup
  </h1>
  <span class="header__socials">
    <span class="header__share">
      SHARE
    </span>
    <%= link_to "http://facebook.com" do %>
      <i class="fa fa-facebook"></i>
    <% end %>
    <%= link_to "http://twitter.com" do %>
      <i class="fa fa-twitter"></i>
    <% end %>
  </span>
</header>
<div class="row home">
    <article class="wow fadeInDown home__article home__article--essential">
      <%= link_to 'Essential tools', essential_path, { :class=>"onClickAnimation" }  %>
    </article>
    <article class="wow fadeInUp home__article home__article--useful">
      <%= link_to 'Useful tools', useful_path, { :class=>"onClickAnimation" }  %>
    </article>
</div>
