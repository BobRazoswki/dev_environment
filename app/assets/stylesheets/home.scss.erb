.home {
  background: url('<%= asset_path("home-bg-6.jpg") %>');
  background-size: cover;
  height: 100vh;
  background-repeat: no-repeat;
  background-position: center center;

  h3 {
    font-size: 38px;
  }

  h3, h5 {
    width: 440px;
    margin: 0 auto;
    top: 30vh;
    position: relative;
    color: #E5E5E5;
    text-align: center;
  }

  h5 {
    padding-top: 40px;
    font-size: 24px;
    text-align: center;
  }

  a {
    color: black;
    width: 122px;
    margin: 0 auto;
    position: relative;
    display: block;
    font-size: 18px;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 15px;
    padding-bottom: 15px;
    background-color: rgba(255, 255, 255, 0.87);
    top: 40vh;
    text-decoration: none;
    transition: all 600ms ease-out;
    -webkit-transition: all 600ms ease-out;
      -moz-transition: all 600ms ease-out;
        -o-transition: all 600ms ease-out;
  }

  a:hover {
    transition: 0.6 all ease;
    background-color: #3D3B3B;
    color: white;
    text-decoration: none !important;
  }

}
