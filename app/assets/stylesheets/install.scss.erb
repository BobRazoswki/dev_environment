/* Carousel sample page for technologies */
.carousel {
  height: 100vh;
  position: relative;

  &__1 {
    background-color: $cream;
  }

  &-control.left, .carousel-control.right  {
    background-image: none!important;
    background-repeat: repeat-x;
  }

}

.step {
  margin-top: 10vh;
  text-align: center;
  max-width: 80%;
  margin: 12vh auto 0 auto;

  p, h2 {
    margin-bottom: 40px;
    display: block;
  }

  &__boxes {
    padding: 10px;
    margin-bottom: 20px;
    margin-top: 20px;
    display: inline-block;

    &--code {
      background-color: rgb(244, 239, 239);
      color: #E4745F;
    }

    &--instructions {
      background-color: #E4745F;
      color: $cream;
    }
  }

  &__next, &__next a {
    padding-left: 20px;
    padding-right: 20px;
    border: 1px solid black;
    width: 200px;
    padding-top: 10px;
    padding-bottom: 10px;
    margin: 0 auto;
    display: block;
    color: black;

    fa-angle-double-right {
      margin-left: 20px;
    }

  }

}
