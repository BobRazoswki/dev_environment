/* Carousel sample page for technologies */
.carousel {
  height: 100%;
  position: relative;
  min-height: 100vh;

  &__1 {
    background-color: $cream;
  }

  &-control.left, .carousel-control.right  {
    background-image: none!important;
    background-repeat: repeat-x;
  }

}

.step {
  margin-top: 10%;
  max-width: 80%;
  margin-left: 19%;

  p, h2 {
    margin-bottom: 40px;
    display: block;
    transition: 0.6s all ease;
  }

  &__boxes {
    padding: 10px;
    margin-bottom: 20px;
    margin-top: 20px;
    display: inline-block;

    // &--code {
    //   background-color: rgb(244, 239, 239);
    //   color: #E4745F;
    // }

    &--code {
      background-color: #f4efef;
      color: #E4745F;
      width: 70%;
      word-wrap: break-word;
      display: inline-block;
    }

    &--instructions {
      background-color: #E4745F;
      color: $cream;
    }
  }

  &__next, &__next a {
    padding-left: 20px;
    padding-right: 20px;
    border: 1px solid black;
    width: 43%;
    padding-top: 10px;
    padding-bottom: 10px;
    display: block;
    color: black;
    margin-top: 20px;
    display: block;
    position: relative;
    margin-bottom: 20px;

    fa-angle-double-right {
      margin-left: 20px;
    }

  }

}
