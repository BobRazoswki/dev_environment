.os {

  &__col {
    height: 100vh;
    text-align: center;
    padding-top: 40vh;
    &--1 {
      background-color: lightblue;
    }

    &--2 {
      background-color: lightgreen;
    }

    &--3 {
      background-color: lightorange;
    }

  }

}
